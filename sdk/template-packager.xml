<project name="fresh-sdk" default="package" basedir=".">
  <property name="sdk.tmpl.dir" value="src/dist/template"/>
  <property name="tmpl.src.dir" value="template"/>
  <property name="app-template.out.file" value="${sdk.tmpl.dir}/app-template.zip"/>
  <property name="plug-template.out.file" value="${sdk.tmpl.dir}/plug-template.zip"/>

  <target name="package">
    <zip destfile="${app-template.out.file}" basedir="${tmpl.src.dir}/app"/>
    <zip destfile="${plug-template.out.file}" basedir="${tmpl.src.dir}/plug"/>
  </target>

  <target name="clean">
    <delete file="${app-template.out.file}"/>
    <delete file="${plug-template.out.file}"/>
  </target>
</project>