#!/bin/sh

set -e

if [ -z "$FRSH_HOME" ]; then
  echo "Please set the FRSH_HOME environment variable."
  exit 1
fi

if [ ! -d "$FRSH_HOME" ]; then
  echo "FRSH_HOME is not a dir."
  exit 1
fi

if [ -e "$FRSH_HOME/config/exec_version" ]; then
  source "$FRSH_HOME/config/exec_version" # load the `version` variable from here
else
  echo "Installation corrupted. Please reinstall."
  exit 1
fi

$FRSH_HOME/sdk/frsh-${version}/bin/frsh $*
